<Window x:Class="BlockChainEventNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PermusClient"
        mc:Ignorable="d"
        
        WindowStartupLocation="CenterScreen"
        Title="BlockChainEventNotification" Height="450" Width="800">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" Name="notification" IsReadOnly="True" AcceptsReturn="True" TextWrapping="WrapWithOverflow" VerticalScrollBarVisibility="Visible"  ></TextBox>
    </Grid>
</Window>
